{
  "manifest_version": 3,
  "name": "Page Refresher For Venny:)",
  "version": "1.0",
  "description": "Refreshes the current page for Venny:) at custom time intervals.",
  "permissions": ["tabs", "storage", "alarms", "notifications"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "start-refresh": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Start page refresh"
    },
    "stop-refresh": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z",
        "mac": "Command+Shift+Z"
      },
      "description": "Stop page refresh"
    },
    "open-popup": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q",
        "mac": "Command+Shift+Q"
      },
      "description": "Open settings popup"
    }
  }
}