{
  "manifest_version": 3,
  "name": "Auto-Copier for Insta.",
  "version": "1.3",
  "description": "Auto-copies phone numbers from Instagram chats and shows them in popup",
  "permissions": ["clipboardWrite", "storage"],
  "action": {
    "default_popup": "popup.html"
  },

"background": {
  "service_worker": "background.js"
},

  "commands": {
    "toggle-extension": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Toggle Instagram Auto Phone Copier ON/OFF"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/*"],
      "js": ["content.js"]
    }
  ]
}
